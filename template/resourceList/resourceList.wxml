<template name="resourceList">
  <block wx:for="{{list}}" wx:for-index="i" wx:key="i" wx:if="{{selected === 0}}">
    <view class="item_mt">
      <text class='title_date titleFont2 color_9'>2018/2/28</text>
      <!-- <navigator url='../orderDetail/orderDetail?id={{item.id}}'> -->
        <view class="item flex_a ">
          <view class="flex">
            <image style="width: 88rpx; height: 88rpx; background-color: #eeeeee;" mode="widthFix" src="{{src}}"></image>
          </view>
          <view class="flex_sb width_100 margin_l_10">
            <view class='flex_f'>
              <text class='font_24'>{{item.name}}</text>
              <text class='font_18 color_9 split'>{{item.subName}}</text>
            </view>
            <view>
              <text class='font_48'>￥{{item.price}}</text>
            </view>
          </view>
        </view>
      <!-- </navigator> -->
    </view>
  </block>
  <view class='flex ressource_last font_18' wx:if="{{selected === 0}}">
    <text>以上是全部吃饭记录</text>
  </view>

  <block wx:for="{{list}}" wx:for-index="i" wx:key="i" wx:if="{{selected === 1}}">
    <view class="item_mt">
      <text class='title_date titleFont2 color_9'>2018/2/28</text>
      <!-- <navigator url='../orderDetail/orderDetail?id={{item.id}}'> -->
        <view class="item flex_a ">
          <view class="flex">
            <image style="width: 88rpx; height: 88rpx; background-color: #eeeeee;" mode="widthFix" src="{{src}}"></image>
          </view>
          <view class="flex_sb width_100 margin_l_10">
            <view class='flex_f'>
              <text class='font_24'>{{item.name}}</text>
            </view>
            <view class='flex_a'>
              <image style="width: 50rpx; height: 50rpx; background-color: #eeeeee;" mode="widthFix" src="{{src}}"></image>
              <text class='font_48'>￥{{item.price}}</text>
            </view>
          </view>
        </view>
      <!-- </navigator> -->
    </view>
  </block>
  <view class='flex ressource_last font_18' wx:if="{{selected === 1}}">
    <text>以上是全部外卖记录</text>
  </view>
  <block wx:for="{{list}}" wx:for-index="i" wx:key="i" wx:if="{{selected === 2}}">
    <view class="item_mt">
      <text class='title_date titleFont2 color_9'>{{item.add_time}}</text>
      <!-- <navigator url='../orderDetail/orderDetail?id={{item.id}}'> -->
        <view class="item_3 flex_r ">
          <view class="flex_3 flex_f flex_a height_100">
            <view class='height_100 width_100 flex_a color_9 split_3'>
              <view>
                <text class='font_18 item_3_l'>付款方：</text>
                <text class='font_24'>{{item.title}}</text>
              </view>
            </view>
            <view class='height_100 width_100 flex_a color_9'>
              <view>
                <text class='font_18 item_3_l'>收款方：</text>
                <text class='font_24'>{{item.name}}</text>
              </view>
            </view>
          </view>


          <view class="flex_1 flex_ce item_3_r">

            <view class='flex_f flex'>
              <text class='font_18 color_9'>发票金额</text>
              <text class='font_48'>￥{{item.price}}</text>
            </view>

          </view>

        </view>
      <!-- </navigator> -->
    </view>
  </block>
  <view class='flex ressource_last font_18' wx:if="{{selected === 2}}">
    <text wx:if='{{list.length > 0}}'>{{footTitle}}</text>
  </view>
</template>